<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ff77">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <ImageView
            android:id="@+id/imgAminal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
           android:src="@drawable/bear"/>

        <TextView
            android:id="@+id/textAnimalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgAminal"
            android:layout_toRightOf="@+id/imgAminal"
            android:text="@string/animal_name" />

        <TextView
            android:id="@+id/txtAnimalPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAnimalName"
            android:layout_toEndOf="@+id/imgAminal"
            android:layout_toRightOf="@+id/imgAminal"
            android:text="Animal Power:" />

        <TextView
            android:id="@+id/txtAnimalSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAnimalPower"
            android:layout_toEndOf="@+id/imgAminal"
            android:layout_toRightOf="@+id/imgAminal"
            android:text="Animal Speed:" />
    </RelativeLayout>
</LinearLayout>
